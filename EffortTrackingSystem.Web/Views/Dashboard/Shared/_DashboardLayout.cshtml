    <script>
        $(function () {

            $.ajax({
                type: 'Get',
                url: '/Dashboard/GetAllDepartmentJson',
                dataType: 'json',
                success: function (data) {
                    $.each(data, function (index, value) {
                        if (value.name.toLowerCase().trim() == "hr")
                        {
                            var href = $("#hrDepartment").attr("href") + "&id=" + value.id;
                            $("#hrDepartment").attr("href", href);
                        }
                        else if (value.name.toLowerCase().trim() == "graphic design") {
                            var href = $("#graphicDepartment").attr("href") + "&id=" + value.id;
                            $("#graphicDepartment").attr("href", href);
                        }
                    });
                },
                async: false
            });

        });
    </script>

