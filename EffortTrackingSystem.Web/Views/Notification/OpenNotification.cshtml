@model EffortTrackingSystem.Models.Dtos.NotificationDto

@{
    ViewData["Title"] = "OpenNotification";
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div>
    <h4>Notification</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class="col-sm-2">
            Details
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Details)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Back to Notifications List", "GetNotifications", null, new { @class = "btn btn-default" })
</div>
